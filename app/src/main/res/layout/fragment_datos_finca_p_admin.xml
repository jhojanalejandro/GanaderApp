<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_logo_fondo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.005"
                app:srcCompat="@drawable/ic_citris" />

            <LinearLayout
                android:id="@+id/ln_datos_finca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_22"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:id="@+id/ln_finca_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cuadro_redondo"
                    android:layout_margin="@dimen/margin_4"
                    android:layout_weight="5"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_8"
                        android:textColor="@color/negro"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="@string/enter_name_finca"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        app:srcCompat="@drawable/ic_rancho" />

                    <TextView
                        android:id="@+id/tv_datos_p_admin_finca_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:textColor="@color/azul"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="@string/enter_name_finca"
                        android:textSize="20sp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_finca_extension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cuadro_redondo"
                    android:layout_weight="5"
                    android:layout_margin="@dimen/margin_4"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ln_finca_nombre">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_8"
                        android:textColor="@color/negro"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="@string/enter_extension"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_cinta_metrica"
                        tools:ignore="ContentDescription,NestedWeights" />

                    <TextView
                        android:id="@+id/tv_datos_p_admin_finca_extension"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/azul"
                        android:gravity="center"
                        android:text="@string/cero"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_datos_cap_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_8"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ln_datos_finca">


                <LinearLayout
                    android:id="@+id/ln_finca_departameto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cuadro_redondo"
                    android:layout_weight="5"
                    android:layout_margin="@dimen/margin_4"

                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ln_finca_nombre">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_8"
                        android:textColor="@color/negro"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="@string/enter_departamento"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="6"
                        app:srcCompat="@drawable/ic_mapa" />

                    <TextView
                        android:id="@+id/tv_datos_p_admin_finca_ubi_prod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:textColor="@color/azul"
                        android:paddingStart="15dp"
                        android:paddingLeft="15dp"
                        android:text="@string/enter_ubicacion"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_finca_municipio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cuadro_redondo"
                    android:layout_weight="5"
                    android:layout_margin="@dimen/margin_4"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ln_finca_nombre">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_8"
                        android:textColor="@color/negro"
                        android:fontFamily="@font/raleway_semibold"
                        android:text="@string/enter_municipio"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/IMG_MUNICIPIO"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_pueblo_u"
                        tools:ignore="ContentDescription,NestedWeights" />

                    <TextView
                        android:id="@+id/tv_datos_p_admin_municipio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/azul"
                        android:gravity="center"
                        android:text="@string/enter_ubicacion"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ln_datos_finca_total_animal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal"
                android:weightSum="10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ln_datos_cap_prod"
                tools:ignore="DisableBaselineAlignment">


                <LinearLayout
                    android:id="@+id/ln_datos_finca_total_animales"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cuadro_redondo"
                    android:layout_weight="5"
                    android:layout_margin="@dimen/margin_4"
                    android:orientation="vertical"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ln_datos_cap_prod">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_8"
                        android:textColor="@color/negro"
                        android:text="@string/total_animales"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_toro" />

                    <TextView
                        android:id="@+id/tv_det_p_admin_estad_cant_animales"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/azul"
                        android:gravity="center"
                        android:text="@string/cero"
                        android:textSize="18sp"
                        tools:ignore="InefficientWeight,NestedWeights" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_p_admin_cant_crias"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/cuadro_redondo"
                    android:layout_weight="5"
                    android:layout_margin="@dimen/margin_4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ln_p_admin_cant_equinos"
                    app:layout_constraintVertical_bias="0.047">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:textColor="@color/negro"
                        android:text="@string/cantidad_crias"
                        android:layout_marginTop="@dimen/margin_8"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/img_crias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_silueta_de_vaca"
                        tools:ignore="InefficientWeight" />


                    <TextView
                        android:id="@+id/tv_p_admin_cant_crias"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/azul"
                        android:text="@string/cero"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_p_admin_cant_vacas"
                android:layout_width="190dp"
                android:layout_height="121dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_margin="@dimen/margin_4"
                android:weightSum="10"
                android:background="@drawable/cuadro_redondo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ln_datos_finca_total_animal"
                app:layout_constraintVertical_bias="0.047">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/negro"
                    android:text="@string/cant_bovinos"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_bovinos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    app:srcCompat="@drawable/ic_vacal" />


                <TextView
                    android:id="@+id/tv_det_p_admin_cant_vacas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingLeft="15dp"
                    android:text="@string/cero"
                    android:textColor="@color/azul"
                    android:textSize="18sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_p_admin_cant_novillos"
                android:layout_width="190dp"
                android:layout_height="121dp"
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_margin="@dimen/margin_4"
                android:background="@drawable/cuadro_redondo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ln_p_admin_cant_vacas"
                app:layout_constraintTop_toBottomOf="@+id/ln_datos_finca_total_animal"
                app:layout_constraintVertical_bias="0.047">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/negro"
                    android:text="@string/cant_animales_novillos"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_novillos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="4"
                    app:srcCompat="@drawable/ic_signo_de_vista_lateral_de_toro_tauro" />


                <TextView
                    android:id="@+id/tv_p_admin_estad_cant_novillos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/azul"
                    android:text="@string/cero"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ln_p_admin_cant_equinos"
                android:layout_width="190dp"
                android:layout_height="121dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_8"
                android:weightSum="10"
                android:layout_margin="@dimen/margin_4"
                android:background="@drawable/cuadro_redondo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ln_p_admin_cant_vacas"
                app:layout_constraintVertical_bias="0.047">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/negro"
                    android:text="@string/cant_animales_equines"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_equinos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    app:srcCompat="@drawable/ic_caballo_de_pie_sobre_tres_patas_en_forma_negra_de_vista_lateral" />


                <TextView
                    android:id="@+id/tv_det_p_admin_estad_cant_equinos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/azul"
                    android:text="@string/cero"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_p_admin_cant_toros"
                android:layout_width="190dp"
                android:layout_height="121dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_8"
                android:weightSum="10"
                android:layout_margin="@dimen/margin_4"

                android:background="@drawable/cuadro_redondo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ln_p_admin_cant_vacas"
                app:layout_constraintTop_toBottomOf="@+id/ln_p_admin_cant_novillos"
                app:layout_constraintVertical_bias="0.047">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_8"
                    android:textColor="@color/negro"
                    android:text="@string/cant_toros"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_toros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="4"
                    app:srcCompat="@drawable/ic_toro_mirando_a_la_derecha"
                    tools:ignore="InefficientWeight" />

                <TextView
                    android:id="@+id/tv_p_admin_estad_cant_toros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/azul"
                    android:text="@string/cero"
                    android:textSize="18sp" />

            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>