<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_subasta"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:orientation="horizontal"
        android:background="@color/azul">

        <ImageView
            android:id="@+id/img_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"

            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_subasta"
            android:contentDescription="@string/imagen_sub_01" />
        <ImageView
            android:id="@+id/img_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            app:srcCompat="@drawable/ic_subasta_puja" />
        <ImageView
            android:id="@+id/img_03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            app:srcCompat="@drawable/ic_subasta" />




    </LinearLayout>


    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">


        <LinearLayout
            android:id="@+id/ln_sub_opc"
            android:layout_width="364dp"
            android:layout_height="93dp"
            android:layout_marginEnd="4sp"
            android:layout_weight="5"
            android:background="@drawable/ic_logo_fondo"
            android:orientation="vertical"
            android:weightSum="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/parent">


            <LinearLayout
                android:id="@+id/ln_name_register_anml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/appbar_margin"
                android:background="@drawable/input_bg"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/envelope_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="25"
                    app:srcCompat="@drawable/ic_subasta" />

                <TextView
                    android:id="@+id/edt_sub_anml_tipo"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_weight="75"
                    android:background="@color/lightGray"
                    android:ems="10"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:hint="@string/tipo_subasta"
                    android:inputType="textPersonName"
                    android:padding="2sp"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ln_sub_ubi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginBottom="8sp"
                android:background="@drawable/input_bg"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="25"
                    app:srcCompat="@drawable/ic_map_small" />

                <TextView
                    android:id="@+id/edt_sub_ubi"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_weight="75"
                    android:background="@color/lightGray"
                    android:ems="10"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:hint="@string/enter_ubicacion"
                    android:inputType="textPersonName"
                    android:padding="2sp"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ln_sub_opc3"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8sp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:weightSum="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/percent">


            <LinearLayout
                android:id="@+id/ln_sub_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginTop="8sp"
                android:layout_marginEnd="8sp"
                android:background="@drawable/input_bg"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="25"
                    app:srcCompat="@drawable/ic_dollar_currency_symbol" />

                <TextView
                    android:id="@+id/edt_sub_precio_anml"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:layout_weight="75"
                    android:background="@color/lightGray"
                    android:ems="10"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:hint="@string/enter_precio_anml"
                    android:inputType="number"
                    android:padding="2sp"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ln_sub_puja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/appbar_margin"
                android:background="@drawable/input_bg"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="25"
                    app:srcCompat="@drawable/ic_subasta" />

                <TextView
                    android:id="@+id/edt_sub_puja_anml"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:background="@color/lightGray"
                    android:ems="10"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center"
                    android:hint="@string/enter_puja"
                    android:inputType="number"
                    android:padding="2sp"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>


    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/imagen_puja_redonda" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/enter_descripcion"
            android:theme="@style/Theme.AppCompat" />

        <TextView
            android:id="@+id/tv_sub_r_descrip"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8sp"
            android:layout_weight="8"
            android:inputType="textMultiLine"
            android:paddingTop="8dp"
            android:text="@string/enter_descripcion"
            android:theme="@style/Theme.AppCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_obs"
            android:layout_weight="2"
            android:theme="@style/Theme.AppCompat" />

        <TextView
            android:id="@+id/tv_sub_r_obs"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_weight="8"
            android:layout_marginStart="8sp"
            android:text="@string/enter_obs"
            android:inputType="textMultiLine"
            android:theme="@style/Theme.AppCompat" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_peso_sub_anml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:background="@drawable/input_bg"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="25"
            app:srcCompat="@drawable/ic_kilo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="25"
            android:gravity="center"
            android:background="@color/lightGray"
            android:ems="10"
            android:fontFamily="@font/raleway_semibold"
            android:hint="@string/enter_generos"
            android:inputType="number"
            android:padding="2sp"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/edt_sub_generos"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="70"
            android:gravity="center"
            android:background="@color/lightGray"
            android:ems="10"
            android:fontFamily="@font/raleway_semibold"
            android:hint="@string/enter_generos"
            android:inputType="number"
            android:padding="2sp"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_sub_fecha_inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:background="@drawable/input_bg"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="25"
            app:srcCompat="@drawable/ic_date_small" />

        <TextView
            android:id="@+id/edt_sub_fecha_inicio"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="75"
            android:gravity="center"
            android:background="@color/lightGray"
            android:ems="10"
            android:fontFamily="@font/raleway_semibold"
            android:hint="@string/enter_f_inicio"
            android:inputType="textPersonName"
            android:padding="2sp"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_sub_fecha_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        android:background="@drawable/input_bg"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="25"
            app:srcCompat="@drawable/ic_date_small" />

        <TextView
            android:id="@+id/edt_sub_fecha_final"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:layout_weight="75"
            android:gravity="center"
            android:background="@color/lightGray"
            android:ems="10"
            android:fontFamily="@font/raleway_semibold"
            android:hint="@string/enter_f_final"
            android:inputType="textPersonName"
            android:padding="2sp"
            android:textSize="12sp" />

    </LinearLayout>




</LinearLayout>